#!/bin/sh

updates=$( { checkupdates; paru -Qu; } | wc -l)

bgcolor='#24283b'
accentcolor='#9ECE6A'

style="^c${accentcolor}^^r00,00,14,h^^f14^^b${accentcolor}^^c${bgcolor}^ï‚« ^c${accentcolor}^^r00,00,6,h^^d^^f22^^c${accentcolor}^"

if [ "${updates}" -ge 10 ]; then
	printf '%s' "${style}${updates}^f8^"
fi
