#!/bin/sh

bgcolor='#1A1B26'
accentcolor='#BB9AF7'

# Nerd Fonts
# icon="^c$accentcolor^^r00,00,12,h^^f12^^b$accentcolor^^c$bgcolor^󰥔 ^c$accentcolor^^r00,00,8,h^^d^^f26^^c$accentcolor^"

# Font Awesome
icon="^c$accentcolor^^r00,00,14,h^^f14^^b$accentcolor^^c$bgcolor^ ^c$accentcolor^^r00,00,6,h^^d^^f26^^c$accentcolor^"

printf "$icon$(date '+%R')"
