#!/usr/bin/bash

# Neovim doesn't resolve filepaths correctly when run as a server :P

declare -a flags=() files=()

[[ -z ${NVIM} ]] && nvim "${@}" && exit 0

# TODO: Open a new, unnamed buffer
if [[ ${#} == 0 ]]; then
    printf '%b' "nvim-remote: no file specified\n"
    exit 1
fi

while true; do
    case "${1}" in
        --debug) set -xv && shift ;;
        -l)
            printf "nvim-remote: lua scripts are not supported in remote mode. See :h --remote"
            exit 2
            ;;
        -[tuicswW]|--startuptime|--listen|--cmd)
            if [[ -e ${2} ]]; then
                flags+=("${1}" "$(realpath "${2}")")
            else
                flags+=("${1}" "\"${2}\"")
            fi

            shift 2
            ;;
        -[qrLS])
            if [[ -e ${2} ]]; then
                flags+=("${1}" "\"$(realpath "${2}")\"")
                shift 2
            else
                flags+=("${1}")
            fi
            ;;
        -*) flags+=("${1}") ;;
        +*) flags+=("\"${1}\"") ;;
        *)
            [[ ${#} == 0 ]] && break

            if [[ -e ${1} ]]; then 
                files+=("$(realpath "${1}")")
            else
                files+=("${PWD}/${1}")
            fi
            ;;
    esac

    shift
done

nvim "${flags[@]}" --server "${NVIM}" --remote "${files[@]}"
