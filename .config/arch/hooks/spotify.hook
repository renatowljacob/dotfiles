# Running Spotx script after Spotify/Spotx update while maintaning external connections like with lastfm

[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = spotify
Target = spotx-git

[Action]
Description = Running Spotx script...
Depends = spotx-git
When = PostTransaction
Exec = /usr/bin/bash -c "killall -q spotify; sed -Ei 's/^[[:blank:]]*[\(]+.*connect[[:alnum:]]+/# &/ ; s/^connect[[:alnum:]]+/# &/' usr/bin/spotx; spotx -f -P /opt/spotify >/dev/null"
