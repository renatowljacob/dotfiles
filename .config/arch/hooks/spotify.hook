[Trigger]
Operation=Install
Operation=Upgrade
Type=Package
Target=spotify
Target=spotx-git

[Action]
Description=Running Spotx script after Spotify/Spotx update while maintaning lastfm connection
Depends=spotx-git
When=PostTransaction
NeedsTargets
Exec=/bin/bash -c "kill $(pidof spotify) >/dev/null 2>&1; sed -Ei 's/^[[:blank:]]*[\(]+.*connect[[:alnum:]]+/# &/ ; s/^connect[[:alnum:]]+/# &/' usr/bin/spotx; spotx -f >/dev/null"
